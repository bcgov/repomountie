    "probot": "^7.5.0",
    "transform-runtime": "0.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.12",
    "@types/nconf": "0.0.37",
    "@types/node": "^10.12.18",
    "eslint-plugin-typescript": "^0.14.0",
